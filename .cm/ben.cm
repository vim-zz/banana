# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  plugin_test:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            NEW: {{ gitStreamPlugins | safe | dump }}
            INXEX: {{ newPlugins | safe | dump }}


gitStreamPlugins: {{ source.diff.files | sortFiles("plugins/filters") }}
newPlugins: {{ source.diff.files | sortFiles("plugins/filters") | extractNewFiles("index.js") }}