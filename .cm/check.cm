
manifest:
  version: 1.0

automations:
  plugin_test:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            newFiles: {{ newFiles }}
            newFiles SAFE: {{ newFiles | safe | dump }}
            parseConfig: {{ parseConfig }}
            parseConfig SAFE: {{ parseConfig | safe | dump }}


newFiles: {{ source.diff.files | extractNewFiles("pom\.xml$") }}
parseConfig: {{ repo | getRepoFile("dependabot.yml", env.CODEOWNERS) }}
