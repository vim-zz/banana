manifest:
  version: 1.0

automations:
  linearb_ai_review:
    # Trigger it only when PR is created or has new commits
    on:
      - pr_created
      - commit
    if:
      - {{ (source.diff.files | extractTerraformChanges) == 'ro' }}
    run:
      - action: add-comment@v1
        args:
          comment: |
          it an RO 
