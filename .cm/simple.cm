# -*- mode: yaml -*-
manifest:
  version: 1.0

automations:
  boolean:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            "true": {{ "true" | bool }}
            true: {{ true | bool }}
            "true\n": {{ "true\n" | bool }}
            "True": {{ "True" | bool }}
            "False": {{ "False" | bool }}
            "x": {{ "x" | bool }}
            123: {{ 123 | bool }}
            1: {{ 1 | bool }}
