# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  dependabot:
    if:
      - {{ pr.title | includes(term="dependabot") }}
    run:
      - action: approve@v1
      - action: add-label@v1
        args:
          label: 'approve-dependabot'
      - action: merge@v1
        args:
          wait_for_all_checks: true 
          squash_on_merge: true
