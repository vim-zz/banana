manifest:
  version: 1.0

automations:
  bump_minor:
    if:
      - {{ bump == 'minor' }}
    run:
      - action: add-comment@v1
        args:
          comment: |
            bot `minor` {{ bump }} version bumps are approved automatically.
  bump_patch:
    if:
      - {{ bump == 'patch' }}
    run:
      - action: add-comment@v1
        args:
          comment: |
            bot `patch` {{ bump }} version bumps are approved and merged automatically.

bump: {{ [["1.2.3", "1.2.1"], ["1.3.1", "1.2.3"]] | compareMultiSemver }}
