# -*- mode: yaml -*-
manifest:
  version: 1.0

automations:
  linearb_ai_codereview:
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: |
            Repo {{ "./repo_guidelines.md" | readFile() }}
            Org: {{ "../cm/org_guidelines.md" | readFile() }}
      - action: code-review@v1
        args:
          guidelines: |
            Repo {{ "./repo_guidelines.md" | readFile() }}
            Org: {{ "../cm/org_guidelines.md" | readFile() }}
