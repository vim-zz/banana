manifest:
  version: 1.0
checks:
  small: {{ files | length <= 3 }}
  change_in_k6: {{ files | isEveryInListRegex('k6\/services\/') }}
automations:
  approve_small_change_in_k6:
    if:
      - {{ checks.small }}
      - {{ checks.change_in_k6 }}
    run: 
      - action : approve@v1
      - action : add-label@v1
        args:
          label: k6-change
