manifest:
  version: 1.0

checks:
  change:
    is:
      formatting_only: {{ source.diff.files | allFormattingChange }}
      all_api: {{ files | isEveryInListRegex('\/api\/') }}
    
automations:
  approve_reformatting:
    if:
      - {{ checks.change.is.all_api }}
    run: 
      - action : add-labels@v1
        args:
          labels: ['api']