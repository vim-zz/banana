# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  base_image_change:
    if:
      - {{ source.diff.files | filter(attr='new_file', regex=r/.*Dockerfile.*/) | matchDiffLines(regex=r/FROM/) | some }}
    run:
      - action: add-label@v1
        args:
          label: 'docker-base-image'
          color: '#E9BF60'
      - action: add-reviewer@v1
        args:
          team_reviewers: ['app-sec']