# -*- mode: yaml -*-

manifest:
  version: 1.0

config:
  admin:
    users: [vim-zz]

automations:
  approve_non_sensitive:
    if:
      - {{ files | match(list=sensitive) | nope }}
    run: 
      - action: add-label@v1
        args:
          label: 'non-sensitive-2'
          color: '#2CA44E'
      - action: add-comment@v1
        args:
          commnet: |
            non-sensitive-2

sensitive:
  - src/k6/services
  - src/api_services
